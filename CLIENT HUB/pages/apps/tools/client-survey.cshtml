@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/apps/tools/client-survey.css" type="text/css">

</head>


<form method="post">

    <!-- <input type="hidden" name="UserName" value="Model.user.UserName">-->
    <br><br>
    <div class="container mt-200">
        <center>

            <h1 style="font-size: 70px;">BPOI Survey Form</h1><br>
            <h3 class="text-muted">
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Ab et nihil odit consectetur
                aliquid autem iste
                fugiat. Impedit distinctio dolorem officiis deserunt magni voluptas sint in quia. Ad, dolore voluptate?
            </h3>
            <br>
            <hr style="width: 100%; border-top: 5px solid black;">
        </center>
        <br>

        <!-- proactiveService -->

        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <i class="fa fa-lightbulb-o fa-4x text-primary mr-4" aria-hidden="true"> &nbsp;</i>
                    <div>
                        <h1 class="mb-0">PROACTIVE SERVICES</h1>
                        <small class="text-muted">
                            Ability to anticipate client needs and offer solutions before problems arise.
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="star-container">
                    <div class="stars">
                        <input value="5" class="star star-5 form-control" id="proactiveService-star-5" type="radio"
                               name="proactiveServiceRating" />
                        <label class="star star-5" for="proactiveService-star-5"></label>
                        <input value="4" class="star star-4 form-control" id="proactiveService-star-4" type="radio"
                               name="proactiveServiceRating" />
                        <label class="star star-4" for="proactiveService-star-4"></label>
                        <input value="3" class="star star-3 form-control" id="proactiveService-star-3" type="radio"
                               name="proactiveServiceRating" />
                        <label class="star star-3" for="proactiveService-star-3"></label>
                        <input value="2" class="star star-2 form-control" id="proactiveService-star-2" type="radio"
                               name="proactiveServiceRating" />
                        <label class="star star-2" for="proactiveService-star-2"></label>
                        <input value="1" class="star star-1 form-control" id="proactiveService-star-1" type="radio"
                               name="proactiveServiceRating" />
                        <label class="star star-1" for="proactiveService-star-1"></label>
                    </div>

                </div>
            </div>
            <div class="col-md-12">
                <br>
                <textarea class="form-control" name="proactiveServiceComment" placeholder="Write a comment..." id=""
                          rows="3"></textarea>
            </div>
        </div><br><br>

        <!-- seamlessExperience -->

        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <i class="fa fa-users fa-3x text-primary mr-3" aria-hidden="true"> &nbsp;</i>
                    <div>
                        <h1 class="mb-0">SEAMLESS EXPERIENCE</h1>
                        <small class="text-muted">
                            Provide consistent and easy-to-use support across all channels, whether it's a
                            phone, email, or chat.
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="star-container">
                    <div class="stars">
                        <input value="5" class="star star-5 form-control" id="seamlessExperience-star-5" type="radio"
                               name="seamlessExperienceRating" />
                        <label class="star star-5" for="seamlessExperience-star-5"></label>
                        <input value="4" class="star star-4 form-control" id="seamlessExperience-star-4" type="radio"
                               name="seamlessExperienceRating" />
                        <label class="star star-4" for="seamlessExperience-star-4"></label>
                        <input value="3" class="star star-3 form-control" id="seamlessExperience-star-3" type="radio"
                               name="seamlessExperienceRating" />
                        <label class="star star-3" for="seamlessExperience-star-3"></label>
                        <input value="2" class="star star-2 form-control" id="seamlessExperience-star-2" type="radio"
                               name="seamlessExperienceRating" />
                        <label class="star star-2" for="seamlessExperience-star-2"></label>
                        <input value="1" class="star star-1 form-control" id="seamlessExperience-star-1" type="radio"
                               name="seamlessExperienceRating" />
                        <label class="star star-1" for="seamlessExperience-star-1"></label>
                    </div>

                </div>
            </div>
            <div class="col-md-12">
                <br>
                <textarea class="form-control" name="seamlessExperienceComment" placeholder="Write a comment..." id=""
                          rows="3"></textarea>
            </div>
        </div><br><br>

        <!-- digitalFluency -->

        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <i class="fa fa-desktop fa-3x text-primary mr-3" aria-hidden="true"> &nbsp;</i>
                    <div>
                        <h1 class="mb-0">DIGITAL FLUENCY</h1>
                        <small class="text-muted">
                            Ability to leverage technology to streamline processes, offer self-service
                            options, and communication.
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="star-container">
                    <div class="stars">
                        <input value="5" class="star star-5 form-control" id="digitalFluency-star-5" type="radio"
                               name="digitalFluencyRating" />
                        <label class="star star-5" for="digitalFluency-star-5"></label>
                        <input value="4" class="star star-4 form-control" id="digitalFluency-star-4" type="radio"
                               name="digitalFluencyRating" />
                        <label class="star star-4" for="digitalFluency-star-4"></label>
                        <input value="3" class="star star-3 form-control" id="digitalFluency-star-3" type="radio"
                               name="digitalFluencyRating" />
                        <label class="star star-3" for="digitalFluency-star-3"></label>
                        <input value="2" class="star star-2 form-control" id="digitalFluency-star-2" type="radio"
                               name="digitalFluencyRating" />
                        <label class="star star-2" for="digitalFluency-star-2"></label>
                        <input value="1" class="star star-1 form-control" id="digitalFluency-star-1" type="radio"
                               name="digitalFluencyRating" />
                        <label class="star star-1" for="digitalFluency-star-1"></label>
                    </div>

                </div>
            </div>
            <div class="col-md-12">
                <br>
                <textarea class="form-control" name="digitalFluencyComment" placeholder="Write a comment..." id=""
                          rows="3"></textarea>
            </div>
        </div><br><br>

        <!-- satisfaction -->

        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="d-flex align-items-center">
                    <i class="fa fa-question-circle fa-3x text-primary mr-3" aria-hidden="true"> &nbsp;</i>
                    <div>
                        <h1 class="mb-0">How Satisfied are you with us?</h1>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="star-container">
                    <div class="stars">

                        <input value="5" class="star star-5 form-control" id="satisfaction-star-5" type="radio"
                               name="satisfactionRating" />
                        <label class="star star-5" for="satisfaction-star-5"></label>
                        <input value="4" class="star star-4 form-control" id="satisfaction-star-4" type="radio"
                               name="satisfactionRating" />
                        <label class="star star-4" for="satisfaction-star-4"></label>
                        <input value="3" class="star star-3 form-control" id="satisfaction-star-3" type="radio"
                               name="satisfactionRating" />
                        <label class="star star-3" for="satisfaction-star-3"></label>
                        <input value="2" class="star star-2 form-control" id="satisfaction-star-2" type="radio"
                               name="satisfactionRating" />
                        <label class="star star-2" for="satisfaction-star-2"></label>
                        <input value="1" class="star star-1 form-control" id="satisfaction-star-1" type="radio"
                               name="satisfactionRating" />
                        <label class="star star-1" for="satisfaction-star-1"></label>
                    </div>

                </div>
            </div>
            <div class="col-md-12">
                <br>
                <textarea class="form-control" name="satisfactionComment" placeholder="Write a comment..." id=""
                          rows="3"></textarea>
            </div>
        </div><br><br>

        <!-- suggestions -->

        <div class="row align-items-center">
            <div class="d-flex align-items-center">
                <div>
                    <h1 class="mb-0">Do you have any suggestions that could help us improve our services?</h1>
                </div>
            </div>

            <div class="col-md-12">
                <br>
                <textarea class="form-control" name="suggestionsComment" placeholder="Write a comment..." id=""
                          rows="3"></textarea>
            </div>
        </div><br><br>

        <div class="text-center">
            <button name="submit" class="btn btn-primary btn-lg w-100" type="submit" asp-page-handler="Submit">SUBMIT</button>
        </div>
        
    </div>
    <br><br>
</form>


